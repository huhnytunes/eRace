<div class="row">

  <div class="col-md-6"> 
    <h1>Goals</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Description</th>
          <th>Time frame</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @goals.each do |goal| %>
          <tr>
            <% if goal.complete != true %> 
            <td><%= goal.description %></td>
            <td><%= goal.time_frame %></td>
            <td><%= link_to 'Complete', id: goal.id, class: "complete" %></td> 
            <td><%= link_to 'Show', goal %></td>
            <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
            <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %> 
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Goal', new_goal_path %>
  </div> 

  <div class="col-md-6">
    <h1>Completed</h1> 

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Description</th>
          <th>Time frame</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @goals.each do |goal| %>
          <tr>
            <% if goal.complete == true %> 
            <td><%= goal.description %></td>
            <td><%= goal.time_frame %></td>
          </tr>
          <% end %> 
        <% end %>
      </tbody>
    </table>
  </div> 

</div> 
